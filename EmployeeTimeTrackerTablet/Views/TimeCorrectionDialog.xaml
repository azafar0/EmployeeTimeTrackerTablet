<Window x:Class="EmployeeTimeTrackerTablet.Views.TimeCorrectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manager Time Correction"
        Height="600"
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#F8F9FA"
        FontFamily="Segoe UI"
        FontSize="14">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#545B62"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3D4247"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Apply Button Style -->
        <Style x:Key="ApplyButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" BlurRadius="10" ShadowDepth="3" Direction="315"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Style -->
        <Style x:Key="SectionStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>

        <!-- Input Style -->
        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Content Card -->
        <Border Style="{StaticResource CardStyle}" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,0,0,20">
                        <TextBlock Text="&#xE823;" 
                                   FontFamily="Segoe UI Symbol" 
                                   FontSize="28" 
                                   Foreground="#007BFF" 
                                   Margin="0,0,12,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Time Correction" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="#495057" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Employee Info Section -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="Employee Information" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#495057" 
                                       Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Employee:" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,10,0" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                           x:Name="EmployeeNameText" 
                                           Text="[Employee Name]" 
                                           FontSize="16" 
                                           Foreground="#007BFF" 
                                           FontWeight="SemiBold" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Current Time Info Section -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="Current Shift Information" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#495057" 
                                       Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="Clock In:" 
                                           FontWeight="SemiBold" 
                                           Margin="0,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           x:Name="ClockInText" 
                                           Text="[Clock In Time]" 
                                           Margin="0,2"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="Original Clock Out:" 
                                           FontWeight="SemiBold" 
                                           Margin="0,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           x:Name="OriginalClockOutText" 
                                           Text="[Original Clock Out Time]" 
                                           Margin="0,2"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="Original Duration:" 
                                           FontWeight="SemiBold" 
                                           Margin="0,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                           x:Name="OriginalDurationText" 
                                           Text="[Original Duration]" 
                                           Margin="0,2"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                           Text="Original Pay:" 
                                           FontWeight="SemiBold" 
                                           Margin="0,2"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                           x:Name="OriginalPayText" 
                                           Text="[Original Pay]" 
                                           Margin="0,2"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Time Correction Section -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="Correct Clock-Out Time" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#495057" 
                                       Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="Date:" 
                                           FontWeight="SemiBold" 
                                           Margin="0,5,10,5" 
                                           VerticalAlignment="Center"/>
                                <DatePicker Grid.Row="0" Grid.Column="1" 
                                            x:Name="CorrectionDatePicker" 
                                            Style="{StaticResource InputStyle}"
                                            SelectedDateChanged="CorrectionDatePicker_SelectedDateChanged"
                                            Margin="0,5,20,5"/>
                                
                                <TextBlock Grid.Row="0" Grid.Column="2" 
                                           Text="Time:" 
                                           FontWeight="SemiBold" 
                                           Margin="0,5,10,5" 
                                           VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="0" Grid.Column="3" 
                                            Orientation="Horizontal" 
                                            Margin="0,5">
                                    <ComboBox x:Name="HourComboBox" 
                                              Width="60" 
                                              Height="35" 
                                              Margin="0,0,5,0"
                                              SelectionChanged="TimeComboBox_SelectionChanged"/>
                                    <TextBlock Text=":" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Margin="0,0,5,0" 
                                               VerticalAlignment="Center"/>
                                    <ComboBox x:Name="MinuteComboBox" 
                                              Width="60" 
                                              Height="35" 
                                              Margin="0,0,5,0"
                                              SelectionChanged="TimeComboBox_SelectionChanged"/>
                                    <ComboBox x:Name="AmPmComboBox" 
                                              Width="60" 
                                              Height="35" 
                                              Margin="5,0,0,0"
                                              SelectionChanged="TimeComboBox_SelectionChanged">
                                        <ComboBoxItem Content="AM"/>
                                        <ComboBoxItem Content="PM"/>
                                    </ComboBox>
                                </StackPanel>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                                           Text="Note: Ensure the corrected time is after the clock-in time and not in the future." 
                                           FontSize="11" 
                                           Foreground="#6C757D" 
                                           Margin="0,10,0,5" 
                                           TextWrapping="Wrap"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Correction Summary Section -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="Correction Summary" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#495057" 
                                       Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="New Clock Out:" 
                                           FontWeight="SemiBold" 
                                           Margin="0,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           x:Name="NewClockOutText" 
                                           Text="[Select date and time above]" 
                                           Foreground="#007BFF" 
                                           FontWeight="SemiBold" 
                                           Margin="0,2"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="New Duration:" 
                                           FontWeight="SemiBold" 
                                           Margin="0,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           x:Name="NewDurationText" 
                                           Text="[Calculated when time selected]" 
                                           Foreground="#28A745" 
                                           FontWeight="SemiBold" 
                                           Margin="0,2"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="New Pay:" 
                                           FontWeight="SemiBold" 
                                           Margin="0,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                           x:Name="NewPayText" 
                                           Text="[Calculated when time selected]" 
                                           Foreground="#28A745" 
                                           FontWeight="SemiBold" 
                                           Margin="0,2"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Correction Reason Section -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="Correction Reason (Required)" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#495057" 
                                       Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="CorrectionReasonTextBox" 
                                     Height="60" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto" 
                                     Padding="10" 
                                     FontSize="14" 
                                     BorderBrush="#DEE2E6" 
                                     BorderThickness="1" 
                                     Background="White"
                                     TextChanged="CorrectionReasonTextBox_TextChanged"/>
                            
                            <TextBlock Text="This reason will be added to the timesheet notes for audit purposes." 
                                       FontSize="11" 
                                       Foreground="#6C757D" 
                                       Margin="0,5,0,0" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Error/Status Messages -->
                    <TextBlock x:Name="ErrorMessage" 
                               Text="" 
                               FontSize="14" 
                               Foreground="#DC3545" 
                               TextAlignment="Center" 
                               FontWeight="SemiBold" 
                               Margin="0,10,0,0" 
                               TextWrapping="Wrap"
                               Visibility="Collapsed"/>

                    <TextBlock x:Name="StatusMessage" 
                               Text="" 
                               FontSize="14" 
                               Foreground="#28A745" 
                               TextAlignment="Center" 
                               FontWeight="SemiBold" 
                               Margin="0,10,0,0" 
                               TextWrapping="Wrap"
                               Visibility="Collapsed"/>

                    <!-- Button Panel -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,25,0,0">
                        <Button x:Name="ApplyButton" 
                                Content="Apply Correction" 
                                Style="{StaticResource ApplyButtonStyle}" 
                                Width="140" 
                                Click="ApplyButton_Click"
                                IsEnabled="False"/>
                        <Button x:Name="CancelButton" 
                                Content="Cancel" 
                                Style="{StaticResource CancelButtonStyle}" 
                                Width="120" 
                                Click="CancelButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>