<Window x:Class="EmployeeTimeTrackerTablet.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeTimeTrackerTablet"
        xmlns:converters="clr-namespace:EmployeeTimeTrackerTablet.Converters"
        mc:Ignorable="d"
        Title="Employee Time Tracker - Tablet" 
        Width="1920"
        Height="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#F3F4F6"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- NullToVisibilityConverter -->
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <!-- RemoveLeadingIconConverter for cleaning status message text -->
        <converters:RemoveLeadingIconConverter x:Key="RemoveLeadingIconConverter"/>

        <!-- Icon Styles for Status Messages -->
        <Style x:Key="CameraIconStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="📷"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SuccessIconStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="✅"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InfoIconStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="ℹ️"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Base Touch Button Style -->
        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A19F9D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Clock In Button Style -->
        <Style x:Key="ClockInButtonStyle" BasedOn="{StaticResource TouchButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="MinHeight" Value="120"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0E6B0E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0C5A0C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A19F9D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Clock Out Button Style -->
        <Style x:Key="ClockOutButtonStyle" BasedOn="{StaticResource TouchButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#D13438"/>
            <Setter Property="MinHeight" Value="120"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B82D31"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#9F262A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A19F9D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search TextBox Style -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1DFDD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Employee ListBox Style -->
        <Style x:Key="EmployeeListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1DFDD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer>
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Employee ListBox Item Style -->
        <Style x:Key="EmployeeListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F2F1"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- DIAGNOSTIC STEP 1: Basic Grid Structure with Visible Test Elements -->
    <!-- TODO: This will be gradually expanded to full UI -->
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="60"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- STEP 1A: Header Section with Simple Content First -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E1DFDD" 
                BorderThickness="0,0,0,1">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Company Logo/Title - RESTORED WITH BEAUTIFUL CLOCK EMOJI -->
                <TextBlock Grid.Column="0"
                          Text="🕒 Employee Time Tracker"
                          FontFamily="Segoe UI"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="#323130"
                          VerticalAlignment="Center"/>

                <!-- ⚠️ DEVELOPMENT ONLY: Reset Test Data Button - RESTORED WITH EMOJI -->
                <Button Grid.Column="1"
                        x:Name="ResetTestDataButton"
                        Content="🗑️ RESET TEST DATA"
                        Command="{Binding ResetTestDataCommand}"
                        Background="#FF4444"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        MinHeight="50"
                        MinWidth="160"
                        Padding="15,8"
                        Margin="20,5,20,5"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        BorderThickness="2"
                        BorderBrush="#CC0000"
                        ToolTip="⚠️ DEVELOPMENT ONLY: Clears all TimeEntry records for testing"
                        AutomationProperties.Name="Reset Test Data"
                        AutomationProperties.HelpText="Development only button to clear all time entry data for testing">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center" 
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF6666"/>
                                                <Setter Property="BorderBrush" Value="#FF0000"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#CC2222"/>
                                                <Setter Property="BorderBrush" Value="#990000"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#95A5A6"/>
                                                <Setter Property="Foreground" Value="#7F8C8D"/>
                                                <Setter Property="BorderBrush" Value="#7F8C8D"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- STEP 1B: Time Display - NO BINDING YET -->
                <StackPanel Grid.Column="2" 
                           Orientation="Vertical" 
                           VerticalAlignment="Center"
                           Margin="24,0">
                    <TextBlock x:Name="CurrentDateText"
                              Text="Loading Date..."
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="#323130"
                              HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CurrentTimeText"
                              Text="Loading Time..."
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="#0078D4"
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- STEP 1C: Status Indicators - STATIC TEXT FIRST -->
                <StackPanel Grid.Column="3" 
                           Orientation="Vertical" 
                           VerticalAlignment="Center"
                           Margin="24,0,0,0">
                    <TextBlock x:Name="StatusIndicator"
                              Text="System Online"
                              FontSize="14"
                              FontWeight="Regular"
                              Foreground="#107C10"
                              HorizontalAlignment="Center"/>
                    <TextBlock x:Name="LastSyncIndicator"
                              Text="Last sync: Just now"
                              FontSize="12"
                              FontWeight="Regular"
                              Foreground="#605E5C"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- STEP 2: Content Section - SIMPLIFIED FIRST -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Employee Search -->
                <ColumnDefinition Width="3*"/>
                <!-- Clock In/Out -->
            </Grid.ColumnDefinitions>

            <!-- STEP 2A: Employee Search Section - NOW WITH DATA BINDING -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="12"
                    Padding="24"
                    Margin="0,0,20,0">
                <StackPanel>
                    <!-- Section Title -->
                    <TextBlock Text="Select Employee"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="#323130"
                              Margin="0,0,0,16"/>

                    <!-- Search TextBox with Clear/Refresh Button Row -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- STEP 2B: Search TextBox - NOW WITH DATA BINDING AND ACCESSIBILITY -->
                        <TextBox x:Name="SearchTextBox"
                                Grid.Column="0"
                                Style="{StaticResource SearchTextBoxStyle}"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                Tag="Type employee name..."
                                AutomationProperties.Name="Employee Search"
                                AutomationProperties.HelpText="Type to search for employees by name or job title"
                                Margin="0,0,8,0"/>

                        <!-- NEW: Clear/Refresh Button - RESTORED WITH BEAUTIFUL EMOJI -->
                        <Button x:Name="ClearRefreshButton"
                                Grid.Column="1"
                                Style="{StaticResource TouchButtonStyle}"
                                Background="#605E5C"
                                FontSize="14"
                                MinHeight="50"
                                MinWidth="80"
                                Padding="12,8"
                                Margin="0"
                                Content="🔄 Reset"
                                AutomationProperties.Name="Clear and Refresh"
                                AutomationProperties.HelpText="Clear search text and refresh the employee list"
                                Command="{Binding ClearRefreshCommand}"/>
                    </Grid>

                    <!-- STEP 2C: Employee List - FIXED: Increased height to accommodate all 13 employees -->
                    <ListBox x:Name="EmployeeSuggestionsListBox"
                            Style="{StaticResource EmployeeListBoxStyle}"
                            ItemContainerStyle="{StaticResource EmployeeListBoxItemStyle}"
                            ItemsSource="{Binding EmployeeSuggestions}"
                            SelectedItem="{Binding SelectedEmployee}"
                            AutomationProperties.Name="Employee Suggestions"
                            AutomationProperties.HelpText="Select an employee from the filtered list"
                            Height="460"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.CanContentScroll="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" 
                                        Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16" 
                                                   Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"/>
                                        <TextBlock Text="{Binding JobTitle}" 
                                                   FontSize="14" 
                                                   Opacity="0.8"
                                                   Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- STEP 2D: THREE-COLUMN HORIZONTAL Layout - FINAL TABLET-OPTIMIZED DESIGN -->
                    <Border Background="White"
                            BorderBrush="#E1DFDD"
                            BorderThickness="2"
                            CornerRadius="12"
                            Padding="16"
                            Margin="0,16,0,0"
                            Visibility="{Binding SelectedEmployee, Converter={StaticResource NullToVisibilityConverter}}"
                            Effect="{DynamicResource DropShadowEffect}">
                        <Border.Resources>
                            <!-- Drop shadow effect for professional appearance -->
                            <DropShadowEffect x:Key="DropShadowEffect" 
                                            Color="#40000000" 
                                            BlurRadius="8" 
                                            ShadowDepth="2" 
                                            Direction="315"/>
                        </Border.Resources>

                        <!-- THREE-COLUMN: Employee header + horizontal time/photo layout -->
                        <StackPanel>

                            <!-- Employee Header Section -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="👤 Selected Employee"
                                              FontSize="11"
                                              FontWeight="SemiBold"
                                              Foreground="#605E5C"
                                              Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding SelectedEmployee.DisplayName}"
                                              FontSize="15"
                                              FontWeight="Bold"
                                              Foreground="#323130"/>
                                </StackPanel>

                                <!-- Status Badge -->
                                <Border Grid.Column="1" 
                                        CornerRadius="8" 
                                        Padding="8,4"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#107C10"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EmployeeStatusMessage}" Value="Currently Clocked In">
                                                    <Setter Property="Background" Value="#0078D4"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding EmployeeStatusMessage}" Value="Available to Clock In">
                                                    <Setter Property="Background" Value="#107C10"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding EmployeeStatusMessage}"
                                              FontSize="10"
                                              FontWeight="SemiBold"
                                              Foreground="White"
                                              TextAlignment="Center"/>
                                </Border>
                            </Grid>

                            <!-- Manager Authentication Status Bar -->
                            <Border Background="#E6F3FF"
                                    BorderBrush="#0078D4"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Margin="0,0,0,8"
                                    Visibility="{Binding IsManagerAuthenticated, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔐"
                                              FontSize="12"
                                              VerticalAlignment="Center"
                                              Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding ManagerAuthMessage}"
                                              FontSize="10"
                                              FontWeight="SemiBold"
                                              Foreground="#0078D4"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- THREE-COLUMN HORIZONTAL LAYOUT: Clock In | Clock Out | Total Hours -->
                            <Border Background="#F8F9FA"
                                    BorderBrush="#E1DFDD"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <!-- Clock In + Photo -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Clock Out + Photo -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Total Hours -->
                                    </Grid.ColumnDefinitions>

                                    <!-- COLUMN 1: Clock In + Photo -->
                                    <StackPanel Grid.Column="0" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Margin="0,0,8,0">

                                        <!-- Clock In Label -->
                                        <TextBlock Text="🕐 Clock In"
                                                  FontSize="11"
                                                  FontWeight="Bold"
                                                  Foreground="#323130"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,4"/>

                                        <!-- Clock In Time -->
                                        <TextBlock Text="{Binding SelectedEmployeeDisplayTimeIn}"
                                                  FontSize="11"
                                                  FontWeight="SemiBold"
                                                  Foreground="#323130"
                                                  HorizontalAlignment="Center"
                                                  TextAlignment="Center"
                                                  Margin="0,0,0,6">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedEmployeeDisplayTimeIn}" Value="">
                                                            <Setter Property="Text" Value="No data"/>
                                                            <Setter Property="Foreground" Value="#A19F9D"/>
                                                            <Setter Property="FontStyle" Value="Italic"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Clock In Photo -->
                                        <Border x:Name="ClockInPhotoBorder"
                                               BorderBrush="#D1D1D1"
                                               BorderThickness="1"
                                               CornerRadius="4"
                                               Width="50"
                                               Height="50"
                                               Background="White"
                                               HorizontalAlignment="Center"
                                               Visibility="{Binding SelectedEmployeeClockInThumbnail, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Image Source="{Binding SelectedEmployeeClockInThumbnail}"
                                                  Stretch="Uniform"
                                                  Width="48"
                                                  Height="48"
                                                  RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>

                                        <!-- Clock In Placeholder -->
                                        <Border x:Name="ClockInPlaceholderBorder"
                                               BorderBrush="#D1D1D1"
                                               BorderThickness="1"
                                               CornerRadius="4"
                                               Width="50"
                                               Height="50"
                                               Background="#F8F9FA"
                                               HorizontalAlignment="Center"
                                               Visibility="{Binding SelectedEmployeeClockInThumbnail, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                                            <TextBlock Text="📷"
                                                      FontSize="20"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Foreground="#A19F9D"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- COLUMN 2: Clock Out + Photo -->
                                    <StackPanel Grid.Column="1" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Margin="8,0">

                                        <!-- Clock Out Label -->
                                        <TextBlock Text="🕕 Clock Out"
                                                  FontSize="11"
                                                  FontWeight="Bold"
                                                  Foreground="#323130"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,4"/>

                                        <!-- Clock Out Time -->
                                        <TextBlock Text="{Binding SelectedEmployeeDisplayTimeOut}"
                                                  FontSize="11"
                                                  FontWeight="SemiBold"
                                                  Foreground="#323130"
                                                  HorizontalAlignment="Center"
                                                  TextAlignment="Center"
                                                  Margin="0,0,0,6">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedEmployeeDisplayTimeOut}" Value="">
                                                            <Setter Property="Text" Value="No data"/>
                                                            <Setter Property="Foreground" Value="#A19F9D"/>
                                                            <Setter Property="FontStyle" Value="Italic"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedEmployeeDisplayTimeOut}" Value="Clock Out: In Progress">
                                                            <Setter Property="Foreground" Value="#0078D4"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Clock Out Photo -->
                                        <Border x:Name="ClockOutPhotoBorder"
                                               BorderBrush="#D1D1D1"
                                               BorderThickness="1"
                                               CornerRadius="4"
                                               Width="50"
                                               Height="50"
                                               Background="White"
                                               HorizontalAlignment="Center"
                                               Visibility="{Binding SelectedEmployeeClockOutThumbnail, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Image Source="{Binding SelectedEmployeeClockOutThumbnail}"
                                                  Stretch="Uniform"
                                                  Width="48"
                                                  Height="48"
                                                  RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>

                                        <!-- Clock Out Placeholder -->
                                        <Border x:Name="ClockOutPlaceholderBorder"
                                               BorderBrush="#D1D1D1"
                                               BorderThickness="1"
                                               CornerRadius="4"
                                               Width="50"
                                               Height="50"
                                               Background="#F8F9FA"
                                               HorizontalAlignment="Center"
                                               Visibility="{Binding SelectedEmployeeClockOutThumbnail, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                                            <TextBlock Text="📷"
                                                      FontSize="20"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Foreground="#A19F9D"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- COLUMN 3: Total Hours -->
                                    <StackPanel Grid.Column="2" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0">

                                        <!-- Total Hours Label -->
                                        <TextBlock Text="⏱️ Total Hours"
                                                  FontSize="11"
                                                  FontWeight="Bold"
                                                  Foreground="#323130"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,4"/>

                                        <!-- Total Hours Value -->
                                        <TextBlock Text="{Binding SelectedEmployeeDisplayHoursWorked}"
                                                  FontSize="14"
                                                  FontWeight="Bold"
                                                  Foreground="#0078D4"
                                                  HorizontalAlignment="Center"
                                                  TextAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedEmployeeDisplayHoursWorked}" Value="">
                                                            <Setter Property="Text" Value="No data"/>
                                                            <Setter Property="Foreground" Value="#A19F9D"/>
                                                            <Setter Property="FontStyle" Value="Italic"/>
                                                            <Setter Property="FontSize" Value="12"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedEmployeeDisplayHoursWorked}" Value="Hours: 0.00h">
                                                            <Setter Property="Foreground" Value="#A19F9D"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                </Grid>
                            </Border>

                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- STEP 3: Clock In/Out Section - STATIC FIRST -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="12"
                    Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Title -->
                        <RowDefinition Height="Auto"/>
                        <!-- TEST BUTTON - TEMPORARY -->
                        <RowDefinition Height="*"/>
                        <!-- Clock Buttons -->
                        <RowDefinition Height="Auto"/>
                        <!-- Status Messages -->
                    </Grid.RowDefinitions>

                    <!-- Section Title -->
                    <TextBlock Grid.Row="0"
                              Text="Time Clock"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="#323130"
                              Margin="0,0,0,24"/>

                    <!-- ⚠️ TEMPORARY TEST BUTTON - RESTORED WITH EMOJI -->
                    <Button Grid.Row="1"
                            x:Name="TempResetButton"
                            Content="🚨 TEST: RESET ALL DATA 🚨"
                            Command="{Binding ResetTestDataCommand}"
                            Background="#FF0000"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            MinHeight="60"
                            Width="300"
                            Margin="0,0,0,20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            BorderThickness="3"
                            BorderBrush="#FFFFFF"
                            ToolTip="TEMPORARY TEST BUTTON - Click to test ResetTestDataCommand"
                            AutomationProperties.Name="Temporary Reset Test Button">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="10" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF3333"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#CC0000"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- 🧪 TESTING ONLY: Manager Correction Workflow Test Button -->
                    <Button Grid.Row="1"
                            x:Name="TestManagerWorkflowButton"
                            Content="🧪 TEST: MANAGER CORRECTION WORKFLOW"
                            Command="{Binding TestManagerCorrectionWorkflowCommand}"
                            Background="#FF6B35"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            MinHeight="50"
                            Width="350"
                            Margin="0,70,0,20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            BorderThickness="2"
                            BorderBrush="#FFFFFF"
                            ToolTip="🧪 TESTING ONLY: Comprehensive test of Manager Time Correction workflow"
                            AutomationProperties.Name="Test Manager Correction Workflow">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF8A5C"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#E55A2B"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#A19F9D"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- STEP 3A: Clock Buttons - BEAUTIFUL CLOCK EMOJI RESTORED -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Clock In Button - BEAUTIFUL CLOCK EMOJI RESTORED -->
                        <Button Grid.Column="0"
                               Style="{StaticResource ClockInButtonStyle}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               AutomationProperties.Name="Clock In"
                               AutomationProperties.HelpText="Clock in to start your work shift"
                               Command="{Binding ClockInCommand}"
                               IsEnabled="{Binding CanClockIn}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="⏰" 
                                          FontSize="32" 
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="CLOCK IN" 
                                          FontSize="20" 
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,4"/>
                                <TextBlock Text="Start Work" 
                                          FontSize="14"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Clock Out Button - BEAUTIFUL CLOCK EMOJI RESTORED -->
                        <Button Grid.Column="1"
                               Style="{StaticResource ClockOutButtonStyle}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               AutomationProperties.Name="Clock Out"
                               AutomationProperties.HelpText="Clock out to end your work shift"
                               Command="{Binding ClockOutCommand}"
                               IsEnabled="{Binding CanClockOut}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="⏰" 
                                          FontSize="32" 
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="CLOCK OUT" 
                                          FontSize="20" 
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,4"/>
                                <TextBlock Text="End Work" 
                                          FontSize="14"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Manager Correction Button - RESTORED WITH PURPLE STYLING -->
                        <Button Grid.Column="2"
                               Name="ManagerCorrectionButton"
                               Command="{Binding ManagerCorrectTimeCommand}"
                               Background="#8B5CF6"
                               Foreground="White"
                               MinHeight="120"
                               MinWidth="200"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="8"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               ToolTip="Correct time entry for selected employee"
                               AutomationProperties.Name="Manager Correction"
                               AutomationProperties.HelpText="Manager time correction for selected employee">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#6A3CBF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#542B99"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#A19F9D"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="⚙️" 
                                          FontSize="32" 
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="MANAGER" 
                                          FontSize="18" 
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,2"/>
                                <TextBlock Text="CORRECTION" 
                                          FontSize="18" 
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,4"/>
                                <TextBlock Text="Time Adjustment" 
                                          FontSize="12"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- STEP 3B: Status Messages with Photo Capture Feedback - ENHANCED WITH PHOTO CAPTURE UI -->
                    <StackPanel Grid.Row="3" Margin="0,24,0,0">
                        <!-- Photo Capture Progress Indicator - PROFESSIONAL CAMERA ICON -->
                        <Border Background="#FFF4CE"
                                BorderBrush="#F7630C"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16,12"
                                Margin="0,0,0,8"
                                Visibility="{Binding PhotoCaptureInProgress, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Style="{StaticResource CameraIconStyle}" VerticalAlignment="Center"/>
                                <TextBlock Text="Capturing Photo..." 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="#8A4F00" 
                                          VerticalAlignment="Center"/>
                                <!-- Simple progress animation -->
                                <TextBlock Name="ProgressDots" 
                                          Text="..." 
                                          FontSize="16" 
                                          FontWeight="Bold" 
                                          Foreground="#8A4F00" 
                                          Margin="4,0,0,0" 
                                          VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PhotoCaptureInProgress}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <StringAnimationUsingKeyFrames Storyboard.TargetProperty="Text" Duration="0:0:1.5">
                                                                    <DiscreteStringKeyFrame Value="." KeyTime="0:0:0"/>
                                                                    <DiscreteStringKeyFrame Value=".." KeyTime="0:0:0.5"/>
                                                                    <DiscreteStringKeyFrame Value="..." KeyTime="0:0:1"/>
                                                                </StringAnimationUsingKeyFrames>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Photo Capture Status Message (Temporary) -->
                        <Border Background="#DFF6DD"
                                BorderBrush="#107C10"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16,12"
                                Margin="0,0,0,8"
                                Visibility="{Binding PhotoCaptureMessage, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Style="{StaticResource SuccessIconStyle}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding PhotoCaptureMessage, Converter={StaticResource RemoveLeadingIconConverter}}"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="#0B5A00"
                                          VerticalAlignment="Center"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Main Status Message -->
                        <Border Background="#F3F2F1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Style="{StaticResource InfoIconStyle}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="StatusMessageText"
                                          Text="{Binding StatusMessage, Converter={StaticResource RemoveLeadingIconConverter}}"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="#323130"
                                          TextWrapping="Wrap"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Photo Capture Status Indicator (Persistent) -->
                        <Border Background="#F8F9FA"
                                BorderBrush="#E1DFDD"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,8"
                                Margin="0,8,0,0"
                                Visibility="{Binding LastPhotoCaptureStatus, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Last Photo: " 
                                          FontSize="12" 
                                          Foreground="#605E5C" 
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding LastPhotoCaptureStatus}"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LastPhotoCaptureStatus}" Value="Success">
                                                    <Setter Property="Foreground" Value="#107C10"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding LastPhotoCaptureStatus}" Value="Failed">
                                                    <Setter Property="Foreground" Value="#D13438"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding LastPhotoCaptureStatus}" Value="N/A">
                                                    <Setter Property="Foreground" Value="#605E5C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- STEP 4: Footer Section - SOME DATA BINDING -->
        <Border Grid.Row="2" 
                Background="#F8F9FA" 
                BorderBrush="#E1DFDD" 
                BorderThickness="0,1,0,0">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- System Status - MIXED STATIC AND DATA BINDING -->
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <TextBlock Text="Database: " 
                              FontSize="14" 
                              Foreground="#323130"/>
                    <TextBlock x:Name="DatabaseStatusText"
                              Text="Connected"
                              FontSize="14"
                              Foreground="#107C10"/>
                    <TextBlock Text=" | Employees: " 
                              FontSize="14" 
                              Foreground="#323130"/>
                    <TextBlock x:Name="EmployeeCountText"
                              Text="{Binding EmployeeCount}"
                              FontSize="14"
                              Foreground="#323130"/>
                    <TextBlock Text=" Active" 
                              FontSize="14" 
                              Foreground="#323130"/>
                </StackPanel>

                <!-- Center Info -->
                <TextBlock Grid.Column="1"
                          x:Name="TabletNameText"
                          Text="Front Desk Tablet"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="#323130"
                          VerticalAlignment="Center"
                          Margin="24,0"/>

                <!-- Admin Access - ENHANCED WITH PROPER ADMIN STYLING -->
                <Button Grid.Column="2"
                       Style="{StaticResource TouchButtonStyle}"
                       Background="#007BFF"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"
                       MinHeight="40"
                       MinWidth="120"
                       Margin="24,0"
                       AutomationProperties.Name="Admin Access"
                       AutomationProperties.HelpText="Access administrative functions with PIN authentication"
                       Command="{Binding AdminAccessCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚙️" 
                                  FontSize="16" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <TextBlock Text="Admin" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Camera Setup Button - BEAUTIFUL CAMERA EMOJI RESTORED -->
                <Button Grid.Column="3"
                       Style="{StaticResource TouchButtonStyle}"
                       Background="#800080"
                       Foreground="White"
                       FontSize="12"
                       MinHeight="40"
                       MinWidth="110"
                       Content="📹 Camera Setup"
                       Margin="8,0,0,0"
                       AutomationProperties.Name="Camera Setup"
                       AutomationProperties.HelpText="TEMPORARY: Test camera selection dialog"
                       Command="{Binding TestCameraSelectionCommand}"/>
            </Grid>
        </Border>
    </Grid>
</Window>