<Window x:Class="EmployeeTimeTrackerTablet.Views.EmployeeEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Information" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#F8F9FA">

    <Window.Resources>
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#212529"/>
        </Style>

        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="DateFieldStyle" TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderTextBlock"
                   Grid.Row="0" 
                   Text="Employee Information" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#007BFF"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Personal Information" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#343A40"
                           Margin="0,0,0,10"/>

                <TextBlock Text="First Name *" Style="{StaticResource FieldLabelStyle}"/>
                <TextBox x:Name="FirstNameTextBox" 
                         Style="{StaticResource InputFieldStyle}"
                         TabIndex="1"/>

                <TextBlock Text="Last Name *" Style="{StaticResource FieldLabelStyle}"/>
                <TextBox x:Name="LastNameTextBox" 
                         Style="{StaticResource InputFieldStyle}"
                         TabIndex="2"/>

                <TextBlock Text="Phone Number" Style="{StaticResource FieldLabelStyle}"/>
                <TextBox x:Name="PhoneNumberTextBox" 
                         Style="{StaticResource InputFieldStyle}"
                         TabIndex="3"/>

                <TextBlock Text="Employment Information" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#343A40"
                           Margin="0,20,0,10"/>

                <TextBlock Text="Job Title" Style="{StaticResource FieldLabelStyle}"/>
                <TextBox x:Name="JobTitleTextBox" 
                         Style="{StaticResource InputFieldStyle}"
                         TabIndex="4"/>

                <TextBlock Text="Pay Rate ($/hour) *" Style="{StaticResource FieldLabelStyle}"/>
                <TextBox x:Name="PayRateTextBox" 
                         Style="{StaticResource InputFieldStyle}"
                         TabIndex="5"/>

                <TextBlock Text="Date Hired" Style="{StaticResource FieldLabelStyle}"/>
                <DatePicker x:Name="DateHiredPicker" 
                            Style="{StaticResource DateFieldStyle}"
                            TabIndex="6"/>

                <CheckBox x:Name="ActiveCheckBox" 
                          Content="Employee is Active"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Margin="0,10,0,20"
                          TabIndex="7"
                          IsChecked="True"/>

                <TextBlock Text="* Required fields" 
                           FontStyle="Italic" 
                           Foreground="Gray"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            
            <Button x:Name="SaveButton" 
                    Content="Save" 
                    Style="{StaticResource DialogButtonStyle}"
                    Background="#28A745"
                    Foreground="White"
                    Click="SaveButton_Click"
                    TabIndex="8"/>
            
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Style="{StaticResource DialogButtonStyle}"
                    Background="#6C757D"
                    Foreground="White"
                    Click="CancelButton_Click"
                    TabIndex="9"/>
        </StackPanel>
    </Grid>
</Window>