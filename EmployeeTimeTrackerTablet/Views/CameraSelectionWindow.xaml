<Window x:Class="EmployeeTimeTrackerTablet.Views.CameraSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Camera Setup - Employee Time Tracker" 
        Width="600"
        Height="500"
        MinWidth="500"
        MinHeight="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#F8F9FA"
        FontFamily="Segoe UI"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Optimized button styles for better space usage -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A19F9D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" BasedOn="{StaticResource PrimaryButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#6C757D"/>
        </Style>

        <Style x:Key="RefreshButtonStyle" BasedOn="{StaticResource PrimaryButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Enhanced ListBox style for better camera list visibility -->
        <Style x:Key="CameraListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="{TemplateBinding Padding}"
                                        Focusable="False">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced ListBoxItem style for better camera selection -->
        <Style x:Key="CameraListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="1"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#BBDEFB"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main layout with optimized space allocation -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <!-- Compact header: 15% of space -->
            <RowDefinition Height="Auto"/>
            <!-- Main camera list area: 70% of space -->
            <RowDefinition Height="*"/>
            <!-- Status area: 10% of space -->
            <RowDefinition Height="Auto"/>
            <!-- Button area: 5% of space -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- COMPACT HEADER SECTION -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8"
                Padding="16,12"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Camera Setup"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="#212529"
                              Margin="0,0,0,2"/>
                    
                    <TextBlock Text="Select a camera device for photo capture"
                              FontSize="13"
                              Foreground="#6C757D"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Style="{StaticResource RefreshButtonStyle}"
                        Command="{Binding RefreshCamerasCommand}"
                        ToolTip="Refresh camera list">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x21BB;" 
                                   FontFamily="Segoe UI Symbol" 
                                   FontSize="13" 
                                   Margin="0,0,5,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Refresh" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- MAIN CAMERA LIST SECTION - Takes most of the window space -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Section header with camera count -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="#495057">
                        <Run Text="Available Cameras"/>
                        <Run Text=" (" Foreground="#6C757D"/>
                        <Run Text="{Binding AvailableCameras.Count, Mode=OneWay, FallbackValue=0}" Foreground="#6C757D"/>
                        <Run Text=" found)" Foreground="#6C757D"/>
                    </TextBlock>
                </Grid>

                <!-- Loading indicator - BEAUTIFUL SEARCH EMOJI -->
                <Border Grid.Row="1"
                        Background="#FFF3CD"
                        BorderBrush="#FFE69C"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,8"
                        Margin="0,0,0,8"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="&#x1F50D;" 
                                   FontFamily="Segoe UI Symbol" 
                                   FontSize="14" 
                                   Margin="0,0,5,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Detecting cameras..."
                                   FontSize="14"
                                   Foreground="#856404"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- CAMERA LIST - The most important element, takes majority of space -->
                <ListBox Grid.Row="2"
                        Style="{StaticResource CameraListBoxStyle}"
                        ItemContainerStyle="{StaticResource CameraListBoxItemStyle}"
                        ItemsSource="{Binding AvailableCameras}"
                        SelectedItem="{Binding SelectedCamera}"
                        MinHeight="180">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Camera icon -->
                                <Border Grid.Column="0"
                                       Background="#F8F9FA"
                                       CornerRadius="6"
                                       Padding="6"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DeviceIcon}"
                                              FontSize="16"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>

                                <!-- Camera information -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}" 
                                              FontWeight="SemiBold" 
                                              FontSize="15" 
                                              Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"
                                              TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding ShortDescription}" 
                                              FontSize="13" 
                                              Opacity="0.75"
                                              Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"
                                              Margin="0,2,0,0"
                                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Status badge -->
                                <Border Grid.Column="2"
                                       CornerRadius="12"
                                       Padding="8,4"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#28A745"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                    <Setter Property="Background" Value="#DC3545"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    
                                    <TextBlock Text="{Binding StatusText}"
                                              FontSize="11"
                                              FontWeight="SemiBold"
                                              Foreground="White"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- COMPACT STATUS MESSAGE SECTION -->
        <Border Grid.Row="2"
                Background="#E9ECEF"
                BorderBrush="#DEE2E6"
                BorderThickness="1"
                CornerRadius="6"
                Padding="12,8"
                Margin="0,0,0,12">
            <TextBlock Text="{Binding StatusMessage}"
                      FontSize="13"
                      Foreground="#495057"
                      TextWrapping="Wrap"
                      HorizontalAlignment="Center"
                      TextAlignment="Center"/>
        </Border>

        <!-- COMPACT BUTTON SECTION -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding SelectCameraCommand}"
                    IsDefault="True"
                    MinWidth="140"
                    FontWeight="Bold">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE114;" 
                               FontFamily="Segoe UI Symbol" 
                               FontSize="14" 
                               Margin="0,0,5,0" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Select Camera" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="2"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Content="Cancel"
                    Command="{Binding CancelSelectionCommand}"
                    IsCancel="True"
                    MinWidth="100"/>
        </Grid>
    </Grid>
</Window>