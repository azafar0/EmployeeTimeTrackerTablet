<Window x:Class="EmployeeTimeTrackerTablet.Views.DualTimeCorrectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dual Time Correction - Manager Access"
        Width="1000" Height="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Professional Color Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#007BFF"/>
        <SolidColorBrush x:Key="PrimaryBlueDark" Color="#0056B3"/>
        <SolidColorBrush x:Key="SecondaryGray" Color="#6C757D"/>
        <SolidColorBrush x:Key="SecondaryGrayDark" Color="#545B62"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#28A745"/>
        <SolidColorBrush x:Key="SuccessGreenDark" Color="#1E7E34"/>
        <SolidColorBrush x:Key="DangerRed" Color="#DC3545"/>
        <SolidColorBrush x:Key="DangerRedDark" Color="#C82333"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFC107"/>
        <SolidColorBrush x:Key="InfoCyan" Color="#17A2B8"/>
        <SolidColorBrush x:Key="LightBackground" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="WhiteBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DEE2E6"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#212529"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#6C757D"/>
        <SolidColorBrush x:Key="TextMuted" Color="#868E96"/>

        <!-- Gradient Brushes for Modern Look -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4FACFE" Offset="0"/>
            <GradientStop Color="#00F2FE" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SummaryGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#667EEA" Offset="0"/>
            <GradientStop Color="#764BA2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Professional Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBlueDark}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlueDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#003D82"/>
                                <Setter Property="BorderBrush" Value="#003D82"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource SecondaryGray}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource SecondaryGray}"/>
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryGray}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryGray}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryGrayDark}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource SecondaryGrayDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3E464C"/>
                                <Setter Property="BorderBrush" Value="#3E464C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource WhiteBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input Control Styles -->
        <Style x:Key="InputControlStyle" TargetType="Control">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource InputControlStyle}">
            <Setter Property="Background" Value="{StaticResource WhiteBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource InputControlStyle}">
            <Setter Property="Background" Value="{StaticResource WhiteBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource InputControlStyle}">
            <Setter Property="Background" Value="{StaticResource WhiteBackground}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Toggle Switch Style for Correction Enable -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="60" Height="30" 
                                    Background="{StaticResource SecondaryGray}" 
                                    CornerRadius="15"
                                    x:Name="SwitchBackground">
                                <Border Width="26" Height="26" 
                                        Background="White" 
                                        CornerRadius="13"
                                        HorizontalAlignment="Left"
                                        Margin="2"
                                        x:Name="SwitchToggle">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" Direction="315" ShadowDepth="1" Opacity="0.3"/>
                                    </Border.Effect>
                                </Border>
                            </Border>
                            <ContentPresenter Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBackground" Property="Background" Value="{StaticResource SuccessGreen}"/>
                                <Setter TargetName="SwitchToggle" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Text Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Message Styles -->
        <Style x:Key="ErrorMessageStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DangerRed}"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

        <Style x:Key="StatusMessageStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource SuccessGreen}"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="30,25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="&#xE823;" FontFamily="Segoe UI Symbol" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="Dual Time Correction" Style="{StaticResource HeaderTextStyle}"/>
                </StackPanel>

                <TextBlock Grid.Row="1" Grid.Column="0" 
                           x:Name="EmployeeInfoText" 
                           Text="Manager interface for correcting both clock-in and clock-out times" 
                           Style="{StaticResource SubHeaderTextStyle}"
                           Margin="59,8,0,0"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                            Orientation="Vertical" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Manager Access" 
                               FontSize="14" 
                               Foreground="White" 
                               TextAlignment="Center" 
                               Opacity="0.8"/>
                    <TextBlock Text="PIN: 9999" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               TextAlignment="Center" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled" 
                      Padding="30,25">
            <StackPanel>
                
                <!-- Employee Information Section -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="&#xE716;" FontFamily="Segoe UI Symbol" FontSize="24" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#495057"/>
                            <TextBlock Text="Employee Information" Style="{StaticResource SectionHeaderStyle}"/>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Full Name:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="EmployeeNameText" Text="" Style="{StaticResource ValueStyle}" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Job Title:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="JobTitleText" Text="" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="0" Grid.Column="4">
                                <TextBlock Text="Employee ID:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="EmployeeIdText" Text="" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,0,0">
                                <TextBlock Text="Shift Date:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="ShiftDateText" Text="" Style="{StaticResource ValueStyle}" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,15,0,0">
                                <TextBlock Text="Hourly Rate:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="HourlyRateText" Text="" Style="{StaticResource ValueStyle}" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="4" Margin="0,15,0,0">
                                <TextBlock Text="Department:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="DepartmentText" Text="" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Current Times Section -->
                <Border Style="{StaticResource CardStyle}" Background="#FFF9C4" BorderBrush="{StaticResource WarningYellow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="&#xE823;" FontFamily="Segoe UI Symbol" FontSize="24" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#856404"/>
                            <TextBlock Text="Current Shift Information" Style="{StaticResource SectionHeaderStyle}" Foreground="#856404"/>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Clock-In Time:" Style="{StaticResource LabelStyle}" TextAlignment="Center" Foreground="#856404"/>
                                <TextBlock x:Name="CurrentClockInText" Text="" FontSize="20" FontWeight="Bold" TextAlignment="Center" Foreground="#856404"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="Clock-Out Time:" Style="{StaticResource LabelStyle}" TextAlignment="Center" Foreground="#856404"/>
                                <TextBlock x:Name="CurrentClockOutText" Text="" FontSize="20" FontWeight="Bold" TextAlignment="Center" Foreground="#856404"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Total Hours:" Style="{StaticResource LabelStyle}" TextAlignment="Center" Foreground="#856404"/>
                                <TextBlock x:Name="CurrentTotalHoursText" Text="" FontSize="20" FontWeight="Bold" TextAlignment="Center" Foreground="#856404"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="Total Pay:" Style="{StaticResource LabelStyle}" TextAlignment="Center" Foreground="#856404"/>
                                <TextBlock x:Name="CurrentTotalPayText" Text="" FontSize="20" FontWeight="Bold" TextAlignment="Center" Foreground="#856404"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Dual Correction Section -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Clock-In Correction -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Background="#E8F5E8" BorderBrush="{StaticResource SuccessGreen}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                                <TextBlock Text="&#xE72C;" FontFamily="Segoe UI Symbol" FontSize="24" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#155724"/>
                                <TextBlock Text="Clock-In Correction" Style="{StaticResource SectionHeaderStyle}" Foreground="#155724"/>
                            </StackPanel>
                            
                            <CheckBox x:Name="EnableClockInCorrection" 
                                      Content="Enable Clock-In Correction" 
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      Foreground="#155724"
                                      Checked="EnableClockInCorrection_Checked"
                                      Unchecked="EnableClockInCorrection_Unchecked"/>
                            
                            <StackPanel x:Name="ClockInCorrectionPanel" IsEnabled="False">
                                <TextBlock Text="Correction Date:" Style="{StaticResource LabelStyle}" Foreground="#155724"/>
                                <DatePicker x:Name="ClockInDatePicker" 
                                            Style="{StaticResource DatePickerStyle}"
                                            SelectedDateChanged="ClockInDatePicker_SelectedDateChanged"
                                            Margin="0,0,0,20"/>
                                
                                <TextBlock Text="Correction Time:" Style="{StaticResource LabelStyle}" Foreground="#155724"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Hour" FontSize="12" Foreground="#155724" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="ClockInHourComboBox" 
                                                  Style="{StaticResource ComboBoxStyle}"
                                                  SelectionChanged="ClockInTime_SelectionChanged"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Minute" FontSize="12" Foreground="#155724" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="ClockInMinuteComboBox" 
                                                  Style="{StaticResource ComboBoxStyle}"
                                                  SelectionChanged="ClockInTime_SelectionChanged"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="4">
                                        <TextBlock Text="AM/PM" FontSize="12" Foreground="#155724" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="ClockInAmPmComboBox" 
                                                  Style="{StaticResource ComboBoxStyle}"
                                                  SelectionChanged="ClockInTime_SelectionChanged"/>
                                    </StackPanel>
                                </Grid>
                                
                                <TextBlock Text="Corrected Clock-In Time:" Style="{StaticResource LabelStyle}" Foreground="#155724"/>
                                <Border Background="#C3E6CB" BorderBrush="{StaticResource SuccessGreen}" BorderThickness="1" CornerRadius="6" Padding="15,12" Margin="0,0,0,10">
                                    <TextBlock x:Name="NewClockInText" 
                                               Text="Not set" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#155724"
                                               TextAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Clock-Out Correction -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}" Background="#FFF0F0" BorderBrush="{StaticResource DangerRed}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                                <TextBlock Text="&#xE823;" FontFamily="Segoe UI Symbol" FontSize="24" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#721C24"/>
                                <TextBlock Text="Clock-Out Correction" Style="{StaticResource SectionHeaderStyle}" Foreground="#721C24"/>
                            </StackPanel>
                            
                            <CheckBox x:Name="EnableClockOutCorrection" 
                                      Content="Enable Clock-Out Correction" 
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      Foreground="#721C24"
                                      Checked="EnableClockOutCorrection_Checked"
                                      Unchecked="EnableClockOutCorrection_Unchecked"/>
                            
                            <StackPanel x:Name="ClockOutCorrectionPanel" IsEnabled="False">
                                <TextBlock Text="Correction Date:" Style="{StaticResource LabelStyle}" Foreground="#721C24"/>
                                <DatePicker x:Name="ClockOutDatePicker" 
                                            Style="{StaticResource DatePickerStyle}"
                                            SelectedDateChanged="ClockOutDatePicker_SelectedDateChanged"
                                            Margin="0,0,0,20"/>
                                
                                <TextBlock Text="Correction Time:" Style="{StaticResource LabelStyle}" Foreground="#721C24"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Hour" FontSize="12" Foreground="#721C24" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="ClockOutHourComboBox" 
                                                  Style="{StaticResource ComboBoxStyle}"
                                                  SelectionChanged="ClockOutTime_SelectionChanged"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Minute" FontSize="12" Foreground="#721C24" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="ClockOutMinuteComboBox" 
                                                  Style="{StaticResource ComboBoxStyle}"
                                                  SelectionChanged="ClockOutTime_SelectionChanged"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="4">
                                        <TextBlock Text="AM/PM" FontSize="12" Foreground="#721C24" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="ClockOutAmPmComboBox" 
                                                  Style="{StaticResource ComboBoxStyle}"
                                                  SelectionChanged="ClockOutTime_SelectionChanged"/>
                                    </StackPanel>
                                </Grid>
                                
                                <TextBlock Text="Corrected Clock-Out Time:" Style="{StaticResource LabelStyle}" Foreground="#721C24"/>
                                <Border Background="#F5C6CB" BorderBrush="{StaticResource DangerRed}" BorderThickness="1" CornerRadius="6" Padding="15,12" Margin="0,0,0,10">
                                    <TextBlock x:Name="NewClockOutText" 
                                               Text="Not set" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#721C24"
                                               TextAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Correction Summary Section -->
                <Border Style="{StaticResource CardStyle}" Background="{StaticResource SummaryGradient}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,25">
                            <TextBlock Text="&#xE8BC;" FontFamily="Segoe UI Symbol" FontSize="24" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="Correction Summary" Style="{StaticResource SectionHeaderStyle}" Foreground="White"/>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="New Total Hours:" Style="{StaticResource LabelStyle}" Foreground="White" TextAlignment="Center"/>
                                <TextBlock x:Name="NewTotalHoursText" Text="0.00 hours" FontSize="22" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="New Total Pay:" Style="{StaticResource LabelStyle}" Foreground="White" TextAlignment="Center"/>
                                <TextBlock x:Name="NewTotalPayText" Text="$0.00" FontSize="22" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Pay Difference:" Style="{StaticResource LabelStyle}" Foreground="White" TextAlignment="Center"/>
                                <TextBlock x:Name="PayDifferenceText" Text="$0.00" FontSize="22" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Correction Reason Section -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="&#xE70F;" FontFamily="Segoe UI Symbol" FontSize="24" Margin="0,0,15,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Correction Reason" Style="{StaticResource SectionHeaderStyle}"/>
                            <TextBlock Text="(Required for Audit Trail)" FontSize="16" Foreground="{StaticResource DangerRed}" FontWeight="SemiBold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBox Grid.Row="1" 
                                 x:Name="CorrectionReasonTextBox" 
                                 Style="{StaticResource TextBoxStyle}"
                                 Height="100" 
                                 Padding="15"
                                 TextChanged="CorrectionReasonTextBox_TextChanged"/>
                    </Grid>
                </Border>

                <!-- Messages Section -->
                <StackPanel>
                    <TextBlock x:Name="ErrorMessage" Style="{StaticResource ErrorMessageStyle}"/>
                    <TextBlock x:Name="StatusMessage" Style="{StaticResource StatusMessageStyle}"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource LightBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,1,0,0" 
                Padding="30,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" 
                        Content="Cancel" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="CancelButton_Click"/>
                <Button x:Name="ApplyButton" 
                        Content="Apply Corrections" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="ApplyButton_Click"
                        IsEnabled="False"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>