<Application x:Class="EmployeeTimeTrackerTablet.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EmployeeTimeTrackerTablet">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Add any additional resource dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Global Converters -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            
            <!-- Style for handling null values visibility -->
            <Style x:Key="NullToVisibilityStyle" TargetType="ContentControl">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- Global Colors -->
            <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="SuccessGreenBrush" Color="#107C10"/>
            <SolidColorBrush x:Key="ErrorRedBrush" Color="#D13438"/>
            <SolidColorBrush x:Key="BackgroundGrayBrush" Color="#F3F4F6"/>
            <SolidColorBrush x:Key="TextDarkBrush" Color="#323130"/>
            <SolidColorBrush x:Key="TextLightBrush" Color="#605E5C"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#E1DFDD"/>
            
            <!-- Icon Font Styles for Professional Status Messages -->
            <Style x:Key="StatusIconStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,8,0"/>
            </Style>
            
            <!-- Success Icon Style -->
            <Style x:Key="SuccessIconStyle" BasedOn="{StaticResource StatusIconStyle}" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource SuccessGreenBrush}"/>
                <Setter Property="Text" Value="&#x2713;"/> <!-- Checkmark -->
            </Style>
            
            <!-- Warning Icon Style -->
            <Style x:Key="WarningIconStyle" BasedOn="{StaticResource StatusIconStyle}" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#F7630C"/>
                <Setter Property="Text" Value="&#x26A0;"/> <!-- Warning Triangle -->
            </Style>
            
            <!-- Error Icon Style -->
            <Style x:Key="ErrorIconStyle" BasedOn="{StaticResource StatusIconStyle}" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource ErrorRedBrush}"/>
                <Setter Property="Text" Value="&#x2717;"/> <!-- X Mark -->
            </Style>
            
            <!-- Info Icon Style -->
            <Style x:Key="InfoIconStyle" BasedOn="{StaticResource StatusIconStyle}" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                <Setter Property="Text" Value="&#x2139;"/> <!-- Info Symbol -->
            </Style>
            
            <!-- Camera Icon Style -->
            <Style x:Key="CameraIconStyle" BasedOn="{StaticResource StatusIconStyle}" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextDarkBrush}"/>
                <Setter Property="Text" Value="&#xE114;"/> <!-- Camera Symbol from Segoe UI Symbol -->
            </Style>
            
            <!-- Refresh Icon Style -->
            <Style x:Key="RefreshIconStyle" BasedOn="{StaticResource StatusIconStyle}" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                <Setter Property="Text" Value="&#x21BB;"/> <!-- Refresh Arrow -->
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
